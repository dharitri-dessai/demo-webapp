{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
<h1>Products</h1>
{% if app.user %}
    <div class="mb-3">
        <a href={{path('product_new')}}>New Product</a>
    </div>
{% endif %}
 
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Size</th>
        </tr>
    <thead>
    <tbody>
    {% for product in products %}        
        <tr>
                <td>
                    <a href={{path('product_show', {'id': product.id})}}>
                        {{ product.name }}
                    </a>
                </td>
                <td>{{ product.description }}</td>
                <td>{{ product.size }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
